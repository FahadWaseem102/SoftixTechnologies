<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fahad.softixtechnologies">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/smash"
        android:label="@string/app_name"
        android:roundIcon="@drawable/smash"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity" >
        </activity>
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".dashboard_activities.AccountsActivity"
            android:label="@string/title_activity_accounts"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".dashboard_activities.GroupsActivity"
            android:label="@string/title_activity_groups"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".dashboard_activities.UsersActivity"
            android:label="@string/title_activity_users"
            android:theme="@style/AppTheme" />
    </application>

</manifest>